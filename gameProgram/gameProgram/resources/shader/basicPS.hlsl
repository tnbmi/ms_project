sampler texSampler;

//=============================================================================
// シェーダー関数
//=============================================================================
float4 PS(float4 diffuse : COLOR0,
		  float2 UV		 : TEXCOORD0) : COLOR0
{
	float4 tex = tex2D(texSampler, UV);
	if(tex.a <= 0.5f)
		tex.a = 0;

	return tex * diffuse;
}
