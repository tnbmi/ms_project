sampler texSampler;

//=============================================================================
// シェーダー関数
//=============================================================================
float4 PS(float4 diffuse : COLOR0,
		  float2 UV		 : TEXCOORD0) : COLOR0
{
	return float4(tex2D(texSampler, UV).rgb * diffuse.rgb, 1.0f);
}
